{
   "name": "api-ms-template",
   "version": "0.0.1",
   "description": "Template for API microservices",
   "main": "build/src/index.js",
   "author": "Troy Moreland <troy@yunibas.com>",
   "license": "UNLICENSED",
   "private": true,
   "scripts": {
      "start:emulators:firestore": "gcloud emulators firestore start --project=emulator-sandbox --host-port=localhost:8081",
      "start:emulators:functions": "env-cmd -r ./.env.json functions-framework --source=build/src --target=api-ms-template",
      "start:emulators": "npm-run-all --parallel start:emulators:firestore start:emulators:functions",
      "stop:emulators": "lsof -t -i:8080 -i:8081 | xargs kill -9",
      "copy:local": "yaml2json .env.local.yml > .env.json",
      "start:dev": "npm-run-all copy:local build start:emulators:functions",
      "start:local": "npm-run-all copy:local build start:emulators",
      "start:watch": "nodemon --watch ./src -e ts -x \"npm run start:local\"",
      "lint": "gts lint",
      "clean": "gts clean",
      "fix": "gts fix",
      "build": "tsc",
      "pretest": "yarn run compile",
      "posttest": "yarn run lint",
      "test": "jest",
      "gcp:deploy:prod": "gcloud functions deploy securesync-webservice --source=build/src --gen2 --env-vars-file=.env.production.yml --runtime=nodejs16 --region=us-central1 --trigger-http --allow-unauthenticated --entry-point=api-ms-template",
      "gcp:deploy:dev": "gcloud functions deploy securesync-webservice --source=build/src --gen2 --env-vars-file=.env.development.yml --runtime=nodejs16 --region=us-central1 --trigger-http --allow-unauthenticated --entry-point=api-ms-template",
      "deploy:prod": "npm-run-all build gcp:deploy:prod",
      "deploy:dev": "npm-run-all build gcp:deploy:dev",
      "logs": "gcloud alpha logging tail"
   },
   "dependencies": {
      "@google-cloud/functions-framework": "^3.1.2",
      "@yunibas/core": "^0.0.2",
      "axios": "^1.1.3",
      "compression": "^1.7.4",
      "cors": "^2.8.5",
      "dotenv": "^16.0.3",
      "express": "^4.18.2",
      "helmet": "^6.0.0",
      "hpp": "^0.2.3",
      "jsonschema": "^1.4.1",
      "short-uuid": "^4.2.0"
   },
   "devDependencies": {
      "@types/compression": "^1.7.2",
      "@types/cookie-parser": "^1.4.3",
      "@types/cors": "^2.8.12",
      "@types/express": "^4.17.13",
      "@types/hpp": "^0.2.2",
      "@types/jest": "^29.1.2",
      "@types/jsonschema": "^1.1.1",
      "@types/node": "^14.11.2",
      "@types/supertest": "^2.0.12",
      "cross-env": "^7.0.3",
      "env-cmd": "^10.1.0",
      "gts": "^3.1.1",
      "jest": "^29.2.0",
      "nodemon": "^3.0.1",
      "supertest": "^6.2.4",
      "ts-jest": "^29.0.3",
      "ts-node": "^10.9.1",
      "typescript": "^4.8.4",
      "yaml2json": "^1.0.2"
   }
}
